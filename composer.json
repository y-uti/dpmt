{
    "name": "y-uti/dpmt",
    "description": "PHP implementation of \"増補改訂版 Java 言語で学ぶデザインパターン入門 マルチスレッド編\"",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Yuji Uchiyama",
            "email": "y.uchiyama.1015@gmail.com"
        }
    ],
    "autoload": {
	"psr-4": {
	    "YUti\\Dpmt\\": "src/"
	}
    },
    "autoload-dev": {
	"psr-4": {
	    "YUti\\Dpmt\\": "tests/"
	}
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "phpstan/phpstan": "^0.11.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "scripts": {
	"phpcs": [
	    "phpcs --standard=PSR2 src tests"
	],
	"phpstan": [
	    "phpstan analyse --level=max --no-progress src tests"
	],
	"test": [
	    "phpunit tests"
	]
    }
}
